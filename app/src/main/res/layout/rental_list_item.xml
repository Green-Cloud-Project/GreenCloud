<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rentdate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:text="대여 날짜"
        />

    <TextView
        android:id="@+id/tv_returndate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:text="반납 날짜"
        />


    <TextView
        android:id="@+id/tv_rent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rentdate_title"
        android:layout_marginTop="2dp"
        android:textSize="17sp"
        android:lines="2"
        android:textAlignment="center"
        android:layout_marginStart="40dp"
        android:text="2019.11.13, 10:12"
        />


    <TextView
        android:id="@+id/tv_return_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_returndate_title"
        android:layout_marginTop="2dp"
        android:textSize="17sp"
        android:lines="2"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:text="2019.11.13, 10:12"
        />


    <TextView
        android:id="@+id/tv_rent_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rent_date"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        android:text="대여 장소"
        />

    <TextView
        android:id="@+id/tv_return_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_return_date"
        android:layout_marginTop="2dp"
        android:layout_marginRight="50dp"
        android:text="반납 장소"
        />


    <TextView
        android:id="@+id/tv_rent_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rent_location_title"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/tv_rent_location_title"
        android:text="강남버스 터미널"
        />


    <TextView
        android:id="@+id/tv_return_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_return_location_title"
        app:layout_constraintStart_toStartOf="@+id/tv_return_location_title"
        android:layout_marginTop="2dp"
        android:text="잠실역"
        />

    <TextView
        android:id="@+id/tv_rental_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_return_location"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="반납"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
