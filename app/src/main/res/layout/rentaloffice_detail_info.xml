<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="bottomNavActivity"
            type="com.share.greencloud.presentation.activity.BottomNavActivity"/>
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_spot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="대여소 이름"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_spot_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="대여소 위치"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="15sp"
            android:layout_alignStart="@id/tv_spot_name"
            android:layout_below="@+id/tv_spot_name"
            />

        <ImageView
            android:id="@+id/iv_um_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/tv_spot_name"
            android:layout_alignTop="@id/tv_spot_name"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/beach_access" />

        <TextView
            android:id="@+id/tv_um_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="10"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_um_img"
            android:layout_alignTop="@id/tv_spot_name"/>

<!--        <View-->
<!--            android:id="@+id/view"-->
