<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/view" />-->

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="@{bottomNavActivity::hideBottomSlide}"
            app:srcCompat="@drawable/ic_close_green" />

        <TextView
            android:id="@+id/tv_available_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="우산 갯수"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_below="@id/tv_um_count"
            android:layout_alignLeft="@id/tv_um_count"
          />

        <TextView
            android:id="@+id/tv_spot_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="대여소 거리"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignStart="@id/tv_spot_name"
            android:layout_below="@+id/tv_spot_location"
            />
    </RelativeLayout>
</layout>